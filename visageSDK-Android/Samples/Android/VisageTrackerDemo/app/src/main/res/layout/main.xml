<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Visage Tracker Demo"
        android:textSize="20sp" />
    <Button
        android:id="@+id/btnStartCam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnStartImage"
        android:layout_alignLeft="@+id/btnStartImage"
        android:layout_alignRight="@+id/btnStartImage"       
        android:layout_marginBottom="10dp"
        android:text=" Track from cam  " />
    
    <Button
        android:id="@+id/btnStartImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"        
        android:text="Track from image" />
    
</RelativeLayout>
		